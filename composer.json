{
    "name": "remessage/php-project-template",
    "description": "PHP Project Template",
    "type": "project",
    "license": "proprietary",
    "homepage": "https://remessage.ru/",
    "authors": [
        {
            "name": "Oleg Kozlov",
            "email": "h1karo@remessage.ru",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "RM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RM\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "vimeo/psalm": "^4.18",
        "psalm/plugin-phpunit": "^0.16",

        "phpunit/phpunit": "^9.5",

        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "scripts": {
        "psalm": "psalm",
        "test": "phpunit --testdox",
        "lint": "php-cs-fixer fix --show-progress=dots"
    },
    "config": {
        "sort-packages": false
    }
}
